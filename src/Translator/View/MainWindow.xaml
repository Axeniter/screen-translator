<Window x:Class="Translator.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Translator"
        mc:Ignorable="d"
        Title="Screen Translator" Height="450" Width="375">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
            BorderBrush="#d6d6d6" 
            BorderThickness="0,0,0,2" 
            Background="#f2f2f2"
            Padding="15">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" 
                          BlurRadius="10" 
                          Opacity="0.3"
                          Color="Gray"/>
            </Border.Effect>
            <TextBlock Text="Settings" 
                   Grid.Row="0" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"/>
        </Border>


        <Border Grid.Row="1"
                Padding="15">
            <StackPanel HorizontalAlignment="Left">
                <StackPanel Margin="0,0,0,5">
                    <TextBlock Text="Translate from:" 
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>

                    <ComboBox FontSize="16"
                              ItemsSource="{Binding SourceLanguages}"
                              SelectedItem="{Binding SelectedSourceLanguage}"
                              Width="300"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,5">
                    <TextBlock Text="Translate from:" 
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>

                    <ComboBox FontSize="16"
                      ItemsSource="{Binding TargetLanguages}"
                      SelectedItem="{Binding SelectedTargetLanguage}"
                      Width="300"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Hotkey:" 
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Assign" FontSize="16"/>
                        <TextBox Width="160" Margin="8,0,0,0" 
                                 IsReadOnly="True" Text="(non assigned)" 
                                 TextAlignment="Center" FontSize="16"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
